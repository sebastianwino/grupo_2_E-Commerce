<!DOCTYPE html>
<html>

<head>
    <%- include('partials/head.ejs') %>

</head>

<body>
    <!-- Header -->
    <%- include('partials/header.ejs', {user: user, admin: admin}) %>
    <!-- /Header -->

    <!-- Main -->
    <div class="h container-fluid conteiner-carrito ">
        <img src="/images/carrito/techo.png" class="fondo-carrito" alt="techo carrito">
    </div>
    <div class="container general">
        <div class="row my-5">
            <div class="col-12 col-md-8">
                <div class="row border-bottom my-3">
                    <div class="col-4">
                        <h3>Imagen</h3>
                    </div>
                    <div class="col-2">
                        <h3>Producto</h3>
                    </div>
                    <div class="col-2">
                        <h3>Precio unitario</h3>
                    </div>
                    <div class="col-2">
                        <h3>Cantidad</h3>
                    </div>
                    <div class="col-2">
                        <h3>Precio total</h3>
                    </div>
                </div>

                <% products.forEach(product => { %>
                <div class="row border-bottom my-3">
                    <div class="col-4">
                        <h3><img src="/images/upload/<%= product.image_1 %>" class="ejemplo-foto-carrito"></h3>
                    </div>
                    <div class="col-2 my-auto">
                        <h3>
                            <nombre>
                        </h3><%= product.name %>
                    </div>
                    <div class="col-2 my-auto color-darkred">
                        <h3>$<%= product.price %></h3>
                    </div>
                    <div class="col-2 my-auto">
                        <form action="/carrito/?_method=PUT" method="POST">
                            <input type="number" name="cant" value="<%= product.cant %>" class="w-50" min="1" max="10">
                            <%- include('products/productsPartials/inputs.ejs', {product: product}) %>
                            <button style="border:none;"><i class="fas fa-sync text-success"></i></button>
                        </form>
                    </div>
                    <div class="col-1 my-auto color-darkred">
                        <h3>$<%= product.total %></h3>
                    </div>
                    <div class="col-1 my-auto">
                        <form action="/carrito" method="POST">
                            <input type="hidden" name="id" value="<%= product.id %>">
                            <button class="btn btn-danger btn-sm mx-3">
                                <h3>X</h3>
                            </button>
                        </form>
                    </div>
                </div>
                <% }) %>
