<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <!-- Header -->
    <%- include('../partials/header.ejs', {user:undefined, admin:undefined}) %>
    <!-- /Header -->

    <!-- Main -->
    <div class="h container-fluid fondo-registro general">
            <form action="/usuarios/registro" method="POST" id="register-form">
               

                <div class="container formulario-login">
                    <h1 class="text-center">Formulario de dirección</h1>
                    <!-- <% if (logueo = true){%>
                    <h3 class="text-center text-danger">Para comprar algún producto usted tiene que tener una cuenta
                    </h3>
                    <% } %> -->

                    <div class="show-errors">
                        <% if (typeof errors != 'undefined') { %>
                        <p style="color: red">ERROR</p>
                        <ul>
                            <% errors.forEach(error => { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                        </ul>
                        <% } %>
                    </div>
<form action="/registro/formulario-direccion" method="POST">
    <div class="form-row">
        <div class="form-group col-12 col-md-4">
            <label for="inputPhone">Alias</label>
            <input type="text" class="form-control" id="inputPhone" aria-describedby="emailHelp"
                name="alias">
            <span class="d-none invalid-feedback">En este campo no puede haber letras.</span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label for="inputPhone">Ciudad</label>
            <input type="text" class="form-control" id="inputPhone" aria-describedby="emailHelp"
                name="city">
            <span class="d-none invalid-feedback">En este campo no puede haber letras.</span>
        </div>
        <div class="form-group col-12 col-md-4">
            <label for="inputPhone">Provincia</label>
            <input type="text" class="form-control" id="inputPhone" aria-describedby="emailHelp"
                name="prov">
            <span class="d-none invalid-feedback">En este campo no puede haber letras.</span>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="inputPhone">Calle</label>
            <input type="text" class="form-control" id="inputPhone" aria-describedby="emailHelp"
                name="street">
            <span class="d-none invalid-feedback">En este campo no puede haber letras.</span>
        </div>
        <div class="form-group col-6 col-md-2">
            <label for="inputPhone">Numero</label>
            <input type="text" class="form-control" id="inputPhone" aria-describedby="emailHelp"
                name="street">
            <span class="d-none invalid-feedback">En este campo no puede haber letras.</span>
        </div>
        <div class="form-group col-6 col-md-1">
            <label for="inputPhone">Piso</label>
            <input type="number" class="form-control" id="inputPhone" aria-describedby="emailHelp"
                name="floor">
            <span class="d-none invalid-feedback">En este campo no puede haber letras.</span>
        </div>
        <div class="form-group col-12 col-md-1">
            <label for="inputPhone">Dto.</label>
            <input type="text" class="form-control" id="inputPhone" aria-describedby="emailHelp"
                name="departament">
            <span class="d-none invalid-feedback">En este campo no puede haber letras.</span>
        </div>
        <div class="form-group col-12 col-md-2">
            <label for="inputPhone">Codigo postal</label>
            <input type="number" class="form-control" id="inputPhone" aria-describedby="emailHelp"
                name="zip_code">
            <span class="d-none invalid-feedback">En este campo no puede haber letras.</span>
        </div>
        <button type="submit" name="submit" class="btn btn-success mx-1">Agregar esta dirección</button>
    </div>
</form>
        
</div>
</div>
<!-- Main -->

<!-- footer -->
<%- include('../partials/footer.ejs') %>
<!-- /footer -->

<script src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.1.1/validator.js"
    integrity="sha512-UpL7Xolu0DUOeG5Zmm7zn/4ZK4wCR7xYEp/fAO0bySJFqoeJG0r4kKPk+YVpuf+2UiEJNAiqSIU35gajAE0mgg=="
    crossorigin="anonymous"></script>
<script src="/js/users/register.js"></script>
</body>

</html>