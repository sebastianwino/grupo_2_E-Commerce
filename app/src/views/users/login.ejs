<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/head.ejs') %>
</head>

<body>
  <!-- Header -->
  <%- include('../partials/header.ejs', {user:undefined, admin:undefined}) %>
  <!-- /Header -->

  <!-- Main -->
  <div class="h container-fluid fondo-login general">
    <div class="container formulario-login">
      <h3 class="text-center text-danger">Para comprar algún producto usted tiene que tener una cuenta.</h3>
      <% if (logueo == false){%>
        <h3 class="text-center text-danger">No hay coincidencia de usuario y contraseña.</h3>  
      <% } %>

      <div class="show-errors">
        <% if (typeof errors != 'undefined') { %>
          <p style="color: red">ERROR</p>
          <ul>
            <% errors.forEach(error => { %>
              <li>
                <%= error.msg %>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </div>

      <form action="/usuarios/login" method="POST" id="login-form">
        <div class="form-group">
          <label for="inputEmail1">Email</label>
          <input type="text" name="email" class="form-control" id="inputEmail1" aria-describedby="emailHelp" value="<%=data.email%>">
          <span class="d-none invalid-feedback">El email debes ser válido</span>
          <small id="emailHelp" class="form-text text-muted">Coloque el e-mail con el que se ha registrado</small>
        </div>
        <div class="form-group">
          <label for="inputPassword1">Contraseña</label>
          <input type="password" name="password" class="form-control" id="inputPassword1">
          <span class="d-none invalid-feedback">La contraseña debe tener como minimo 8 caracteres</span>

        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" name="remember" value="yes" id="iheck1">
          <label class="form-check-label" for="iheck1">Recordarme</label>
        </div>
        <small id="emailHelp" class="form-text text-muted my-2">Si no estás registrado puede registrarse con unos
          simples pasos. Pulse "registrarme"!</small>
        <div class="d-flex justify-content-between">
          <a type="submit" class="btn btn-primary registrarme" href="/usuarios/registro">Registrarme</a>
          <button type="submit" name="submit" class="btn btn-info mx-1">Entrar</button>
        </div>

      </form>
    </div>
  </div>
  <!-- Main -->

  <!-- footer -->
  <%- include('../partials/footer.ejs') %>
  <!-- /footer -->

  <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.1.1/validator.js" integrity="sha512-UpL7Xolu0DUOeG5Zmm7zn/4ZK4wCR7xYEp/fAO0bySJFqoeJG0r4kKPk+YVpuf+2UiEJNAiqSIU35gajAE0mgg==" crossorigin="anonymous"></script>
  <script src="/js/users/login.js"></script>
</body>

</html>