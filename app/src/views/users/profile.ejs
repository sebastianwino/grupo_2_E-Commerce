<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <!-- Header -->
    <%- include('../partials/header.ejs', {user: user, admin: admin}) %>
    <!-- /Header -->


    <!-- Main -->

    <div class="h container-fluid fondo-registro general">
        <div class="row profile-container">


            <% if (typeof errors != 'undefined') { %>
            <div class="col-4"></div>
            <div class="col-8">
                <p style="color: darkred">ERROR AL EDITAR EL PERFIL, REVISE LOS SIGUIENTES ERRORES<br>EN LA SECCIÓN DE
                    "EDITAR PERFIL"</p>
                <ul>
                    <% errors.forEach(error => { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
                </ul>
            </div>
            <% } %>


            <div class="col-2 profile-menu">
                <ul>
                    <li class="mb-4 profile-list reset-link"><button type="button"
                            class="btn btn-menu w-75 first-menu selectedMenu"><b>Datos</b></button></li>
                    <li class="mb-4 profile-list reset-link"><button type="button"
                            class="btn btn-menu w-75 second-menu"><b>Direcciones</b></button></li>
                    <li class="mb-4 profile-list reset-link"><button type="button"
                            class="btn btn-menu w-75 third-menu"><b>Pedidos</b></button></li>
                    <li class="mb-4 profile-list reset-link"><button type="button"
                            class="btn btn-menu w-75 fourth-menu"><b>Editar perfil</b></button></li>
                    <li class="mt-4 profile-list reset-link">
                        <form action="/usuarios/logout" method="GET">
                            <button type="submit" class="btn btn-danger registrarme w-75">Cerrar sesión</button>
                        </form>
                    </li>
                </ul>
            </div>

            <div class="col-1"></div>

            <div class="col-9 main-panel">

                <div class="col-9 profile-panel datos first-panel">
                    <h1 class="font-weight-bold">Datos de la cuenta</h1>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Nombre:</p>
                            <p class="userInfo"> <%=  userLoggedIn.name %></p>

                        </div>
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Apellido:</p>
                            <p class="userInfo"> <%=  userLoggedIn.last_name %></p>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Email:</p>
                            <p class="userInfo"> <%=  userLoggedIn.email %></p>

                        </div>
                        <div class="form-group">
                            <p class="tittle font-weight-bold"> Teléfono principal:</p>
                            <p class="userInfo"> <%=  phone.cell_phone %></p>
                        </div>
                    </div>

                    <div class="form-row">
                        <% if (phone.cell_phone_2) { %>
                        <div class="form-group">
                            <p class="tittle font-weight-bold"> Teléfono principal:</p>
                            <p class="userInfo"> <%=  phone.cell_phone_2 %></p>
                        </div>
                        <% } %>
                        <% if (phone.phone) { %>
                        <div class="form-group">
                            <p class="tittle font-weight-bold"> Teléfono principal:</p>
                            <p class="userInfo"> <%=  phone.phone %></p>
                        </div>
                        <% } %>
                    </div>

                </div>

                <div class="col-9 profile-panel addresses d-none second-panel login-register-card">
            <% if (addresses) { %>
                <%addresses.forEach(address=>{%>
                    <h1 class="font-weight-bold">Tus direcciones</h1>
                    <div class="form-row">
                        <div class="form-group col-12">
                            <p class="userInfo" style="font-size: 2em"> <%=address.alias%></p>

                    </div>
                        <div class="form-group col-12 col-md-2">
                            <p class="tittle font-weight-bold"> Calle:</p>
                            <p class="userInfo"> <%= address.street  %></p>
                        </div>
                    </div>
                    <div class="form-group col-12 col-md-2">
                        <p class="tittle font-weight-bold"> Altura:</p>
                        <p class="userInfo"> <%= address.number%></p>
                    </div>
                    <div class="form-group col-12 col-md-1">
                        <p class="tittle font-weight-bold"> Piso:</p>
                        <p class="userInfo"> <%= address.floor%></p>
                    </div>
                    <div class="form-group col-12 col-md-1">
                        <p class="tittle font-weight-bold"> Departamento:</p>
                        <p class="userInfo"> <%= address.departament%></p>
                    </div>
                    <div class="form-group col-12 col-md-2">
                        <p class="tittle font-weight-bold"> Codigo postal:</p>
                        <p class="userInfo"> <%= address.zip_code %></p>
                    </div>
                    <div class="form-group col-12 col-md-2">
                        <p class="tittle font-weight-bold"> Ciudad:</p>
                        <p class="userInfo"> <%= address.city %></p>
                    </div>
                    <div class="form-group col-12 col-md-2">
                        <p class="tittle font-weight-bold"> Provincia:</p>
                        <p class="userInfo"> <%= address.prov%></p>
                    </div>
                    <%})%>
                    <% } %>
                    <div class="form-group">
                       <form action="/usuarios/perfil/direcciones" method="GET">
                            <button class="btn btn-info">Registrar una dirección</button>
                        </form>
                    </div>

                </div>

                <div class="col-9 profile-panel orders d-none third-panel">
                    <h1 class="font-weight-bold">Tus pedidos</h1>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Data:</p>
                            <p class="userInfo"> ......</p>

                        </div>
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Data:</p>
                            <p class="userInfo"> ......</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="tittle font-weight-bold"> Email:</p>
                        <p class="userInfo"> ......</p>
                    </div>
                </div>

                <div class="col-9 profile-panel edit d-none fourth-panel">
                    <h1 class="font-weight-bold">Editar tus datos</h1>
                    <form action="/usuarios/perfil/editar?_method=PUT" method="POST" id="edit-profile-form">

                        <div class="edit-profile-card">


                            <div class="form-row">
                                <div class="form-group col-12 col-md-6">
                                    <label for="inputName">Nombre</label>
                                    <input type="text" class="form-control" id="inputName" aria-describedby="emailHelp"
                                        name="name" value="<%=userLoggedIn.name%>">
                                    <span class="d-none invalid-feedback">El nombre no puede estar vacio</span>
                                </div>
                                <div class="form-group col-12 col-md-6">
                                    <label for="inputLastName">Apellido</label>
                                    <input type="text" class="form-control" id="inputLastName"
                                        aria-describedby="emailHelp" name="lastname"
                                        value="<%=userLoggedIn.last_name%>">
                                    <span class="d-none invalid-feedback">El apellido no puede estar vacio</span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-12 col-md-4">
                                    <label for="inputPhone1">Telefono celular 1</label>
                                    <input type="text" class="form-control" id="inputPhone1"
                                        aria-describedby="emailHelp" name="cell_phone" value="<%=phone.cell_phone%>">
                                    <span class="d-none invalid-feedback">En este campo no puede haber letras</span>
                                </div>
                                <div class="form-group col-12 col-md-4">
                                    <label for="inputPhone2">Telefono celular 2</label>
                                    <input type="text" class="form-control" id="inputPhone2"
                                        aria-describedby="emailHelp" name="cell_phone_2"
                                        value="<%=phone.cell_phone_2%>">
                                    <span class="d-none invalid-feedback">En este campo no puede haber letras</span>
                                </div>
                                <div class="form-group col-12 col-md-4">
                                    <label for="phone">Telefono celular 2</label>
                                    <input type="text" class="form-control" id="phone" aria-describedby="emailHelp"
                                        name="phone" value="<%=phone.phone%>">
                                    <span class="d-none invalid-feedback">En este campo no puede haber letras</span>
                                </div>
                            </div>

                            <input type="hidden" class="form-control" name="phone_id" value="<%=phone.id%>">

                            <div class="d-lg-flex justify-content-lg-between ">
                                <div class="edit-buttons">
                                    <button type="reset" class="btn btn-warning mt-4">Borrar cambios</button>
                                </div>
                                <div class="edit-buttons">
                                    <button type="submit" name="submit" class="btn btn-success mt-4">Confirmar
                                        cambios</button>
                                </div>
                            </div>

                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>


    </div>
    <!-- /Main -->

    <!-- /footer -->
    <%- include('../partials/footer.ejs') %>
    <!-- /footer -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.1.1/validator.js"
        integrity="sha512-UpL7Xolu0DUOeG5Zmm7zn/4ZK4wCR7xYEp/fAO0bySJFqoeJG0r4kKPk+YVpuf+2UiEJNAiqSIU35gajAE0mgg=="
        crossorigin="anonymous"></script>
    <script src="/js/users/profile.js"></script>
</body>

</html>