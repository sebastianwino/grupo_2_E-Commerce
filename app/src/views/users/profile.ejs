<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <!-- Header -->
    <%- include('../partials/header.ejs',{user:user}) %>
    <!-- /Header -->

    <!-- Main -->
    <div class="container-fluid fondo-registro general">
        <div class="container formulario-registro">

            <h1 class="font-weight-bold">Datos de la cuenta</h1>
            <div class="form-row">
                <div class="form-group col-12 col-md-6">
                    <p class="tittle font-weight-bold"> Nombre:</p>
                    <p class="userInfo"> <%=  userComplete.name %></p>

                </div>
                <div class="form-group col-12 col-md-6">
                    <p class="tittle font-weight-bold"> Apellido:</p>
                    <p class="userInfo"> <%=  userComplete.lastname %></p>
                </div>
            </div>
            <div class="form-group">
                <p class="tittle font-weight-bold"> Email:</p>
                <p class="userInfo"> <%=  userComplete.email %></p>
            </div>
            <div class="form-row">
                <div class="form-group col-12 col-md-6">
                    <p class="tittle font-weight-bold"> Direccion:</p>
                    <p class="userInfo"> <%=  userComplete.address %></p>
                </div>
                <div class="form-group col-12 col-md-6">
                    <p class="tittle font-weight-bold"> Ciudad:</p>
                    <p class="userInfo"> <%=  userComplete.city %></p>
                </div>
                <div class="form-group col-12 col-md-6">
                    <p class="tittle font-weight-bold"> Telefono:</p>
                    <p class="userInfo"> <%=  userComplete.phoneNumber %></p>
                </div>
                
                <div class="form-group col-12 col-md-6">
                    <form action="/usuarios/logout" method="POST">
                        <button type="submit" class="btn btn-danger">Cerrar sesi√≥n</button>
                    </form>
                </div>
                
            </div>

        </div>
    </div>
    <!-- Main -->

    <!-- footer -->
    <%- include('../partials/footer.ejs') %>
    <!-- /footer -->

</body>

</html>