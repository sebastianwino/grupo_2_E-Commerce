<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <!-- Header -->
    <%- include('../partials/header.ejs', {user: user, admin: admin}) %>
    <!-- /Header -->                      


    <!-- Main -->

    <div class="h container-fluid fondo-registro general">
        <div class="row profile-container">
            <div class="col-2 profile-menu">
                <ul>
                    <li class="mb-4 profile-list reset-link"><button type="button" class="btn btn-menu w-75 first-menu selectedMenu"><b>Datos</b></button></li>
                    <li class="mb-4 profile-list reset-link"><button type="button" class="btn btn-menu w-75 second-menu"><b>Direcciones</b></button></li>
                    <li class="mb-4 profile-list reset-link"><button type="button" class="btn btn-menu w-75 third-menu"><b>Pedidos</b></button></li>
                    <li class="mb-4 profile-list reset-link"><button type="button" class="btn btn-menu w-75 fourth-menu"><b>Editar perfil</b></button></li>
                    <li class="mt-4 profile-list reset-link">
                        <form action="/usuarios/logout" method="GET">
                            <button type="submit" class="btn btn-danger registrarme w-75">Cerrar sesión</button>
                        </form>
                    </li>
                </ul>
            </div>
    
            <div class="col-1"></div>
            <div class="col-9 main-panel">

                <div class="col-9 profile-panel datos first-panel">
                    <h1 class="font-weight-bold">Datos de la cuenta</h1>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Nombre:</p>
                            <p class="userInfo"> <%=  userLoggedIn.name %></p>
        
                        </div>
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Apellido:</p>
                            <p class="userInfo"> <%=  userLoggedIn.last_name %></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="tittle font-weight-bold"> Email:</p>
                        <p class="userInfo"> <%=  userLoggedIn.email %></p>
                    </div>
                </div>

                <div class="col-9 profile-panel addresses d-none second-panel">
                    <h1 class="font-weight-bold">Tus direcciones</h1>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Alias:</p>
                            <p class="userInfo"> <%= address.alias %></p>
        
                        </div>
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Calle:</p>
                            <p class="userInfo"> <%= address.street  %></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="tittle font-weight-bold"> Altura:</p>
                        <p class="userInfo"> <%= address.number  %></p>
                    </div>
                </div>

                <div class="col-9 profile-panel orders d-none third-panel">
                    <h1 class="font-weight-bold">Tus pedidos</h1>
                    <div class="form-row">
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Data:</p>
                            <p class="userInfo"> ......</p>
        
                        </div>
                        <div class="form-group col-12 col-md-6">
                            <p class="tittle font-weight-bold"> Data:</p>
                            <p class="userInfo"> ......</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <p class="tittle font-weight-bold"> Email:</p>
                        <p class="userInfo"> ......</p>
                    </div>
                </div>
                
                <div class="col-9 profile-panel edit d-none fourth-panel">
                    <h1 class="font-weight-bold">Editar tus datos</h1>
                    <form action="/usuarios/perfil/editar?_method=PUT" method="POST" id="edit-profile-form">

                        <div class="edit-profile-card">
                            <div class="show-errors">
                                <% if (typeof errors != 'undefined') { %>
                                <p style="color: red">ERROR</p>
                                <ul>
                                    <% errors.forEach(error => { %>
                                    <li>
                                        <%= error.msg %>
                                    </li>
                                    <% }) %>
                                </ul>
                                <% } %>
                            </div>
                    
                            <div class="form-row">
                                <div class="form-group col-12 col-md-6">
                                    <label for="inputName">Nombre</label>
                                    <input type="text" class="form-control" id="inputName" aria-describedby="emailHelp" name="name"
                                        value="<%=userLoggedIn.name%>">
                                    <span class="d-none invalid-feedback">El nombre no puede estar vacio</span>
                                </div>
                                <div class="form-group col-12 col-md-6">
                                    <label for="inputLastName">Apellido</label>
                                    <input type="text" class="form-control" id="inputLastName" aria-describedby="emailHelp" name="lastname"
                                        value="<%=userLoggedIn.last_name%>">
                                    <span class="d-none invalid-feedback">El apellido no puede estar vacio</span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail1">Email</label>
                                <input type="text" class="form-control" id="inputEmail1" aria-describedby="emailHelp" name="email"
                                    value="<%=userLoggedIn.email%>">
                                <span class="d-none invalid-feedback">El email debes ser válido</span>
        
                            </div>
                    
                            <div class="form-row">
                                <div class="form-group col-12 col-md-4">
                                    <label for="inputPhone1">Telefono celular 1</label>
                                    <input type="text" class="form-control" id="inputPhone1" aria-describedby="emailHelp"
                                        name="cell_phone" value="<%=phone.cell_phone%>">
                                    <span class="d-none invalid-feedback">En este campo no puede haber letras</span>
                                </div>
                                <div class="form-group col-12 col-md-4">
                                    <label for="inputPhone2">Telefono celular 2</label>
                                    <input type="text" class="form-control" id="inputPhone2" aria-describedby="emailHelp" name="cell_phone_2" value="<%=phone.cell_phone_2%>">
                                    <span class="d-none invalid-feedback">En este campo no puede haber letras</span>
                                </div>
                                <div class="form-group col-12 col-md-4">
                                    <label for="phone">Telefono celular 2</label>
                                    <input type="text" class="form-control" id="phone" aria-describedby="emailHelp" name="phone" value="<%=phone.phone%>">
                                    <span class="d-none invalid-feedback">En este campo no puede haber letras</span>
                                </div>
                            </div>
                    
                            <div class="d-lg-flex justify-content-lg-between ">
                                <div class="edit-buttons">
                                    <button type="reset" class="btn btn-warning mt-4">Borrar cambios</button>
                                </div>
                                <div class="edit-buttons">
                                    <button type="submit" name="submit"class="btn btn-success mt-4">Confirmar cambios</button>
                                </div>
                            </div>
                    
                        </div>
                    
                    </form>
                </div>
            
            </div>

        </div>
    </div>


    </div>
    <!-- /Main -->

    <!-- /footer -->
    <%- include('../partials/footer.ejs') %>
    <!-- /footer -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.1.1/validator.js"
        integrity="sha512-UpL7Xolu0DUOeG5Zmm7zn/4ZK4wCR7xYEp/fAO0bySJFqoeJG0r4kKPk+YVpuf+2UiEJNAiqSIU35gajAE0mgg=="
        crossorigin="anonymous"></script>
    <script src="/js/users/profile.js"></script>
</body>

</html>


