<div class="titulo-productos">
    <h1><a href="/">Home</a>/<a href="<%= userType %>/productos">Productos</a></h1>
</div>

<div class="search-result">
    <%if (typeof cant != 'undefined') {%>
    <% if (cant == 1) { %>
    <div>
        <p><b>Se ha encontrado <%=cant%> producto para tu busqueda:</b></p>
    </div>
    <% } else {%>
    <div>
        <p><b>Se han encontrado <%=cant%> productos para tu busqueda:</b></p>
    </div>
    <%}%>
    <%}%>
    <%if (products.length == 0) {%>
    <div class="w-100">
        <h4 class="text-danger" style="line-height: 100px; text-align: center;">
            <b>No se han encontrado productos</b>
        </h4>
    </div>
    <%}%>
</div>

<div class="allProducts row">

    <% products.forEach(product => { %>
    <a href="<%= userType %>/productos/<%= product.id %>">
        <div class="col-12 col-sm-6 col-lg-4 mb-2">
            <div class="card tarjetas-productos product-card-inProducts d-flex">
                <div class="imagen-producto-productos">
                    <img class="card-img-top imagen-producto-producto" src="/images/upload/<%=product.image_1%>"
                        alt="imagen de <%= product.name %>">
                </div>
                <div class="card-body body-card">
                    <div class="d-flex justify-content-between">
                        <div class="titulo-precio">
                            <p class="titulo-producto"><%= product.name %></p>
                        </div>

                        <div class="add-to-cart-products">
                            <a href="#"><i class="fas fa-shopping-cart fa-2x"></i></a>
                        </div>

                    </div>
                </div>
                <div class="titulo-precio">
                    <p class="precio-producto">$<%= product.price %></p>
                </div>
            </div>
        </div>
    </a>
    <% }) %>
</div>

<%- include('./pagination-nav.ejs') %>
