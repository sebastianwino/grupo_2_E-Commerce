<div class="pagination-nav d-flex justify-content-center">
    <nav aria-label="...">
        <ul class="pagination">

            <% if (pagination.currentPage != 0) { %>
                <li class="page-item mr-2">
                    <a class="page-link reset-link pagination-menu" href="<%= pagination.firstPage %>"><i class="fas fa-angle-double-left"></i></a>
                </li>
            <% } %>
            
            <% if (pagination.currentPage != 0 ) { %>
                <li class="page-item mr-1">
                    <a class="page-link reset-link pagination-menu" href="<%= pagination.prevPage %>"><i class="fas fa-angle-left"></i> <b>Anterior</b></a>
                </li>
            <% } %>
            
            <% if (pagination.currentPage != pagination.totalPages) { %>
                <li class="page-item ml-1">
                    <a class="page-link reset-link pagination-menu" href="<%= pagination.nextPage %>"><b>Siguiente</b> <i class="fas fa-angle-right"></i></a>
                </li>
            <% } %>
            
            <% if (pagination.currentPage != pagination.totalPages) { %>
                <li class="page-item ml-2">
                    <a class="page-link reset-link pagination-menu" href="<%= pagination.lastPage %>"><i class="fas fa-angle-double-right"></i></a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>